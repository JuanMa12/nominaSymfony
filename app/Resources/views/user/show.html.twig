{% extends 'base.html.twig' %}

{% block body %}
<div class="panel panel-primary">
    <div class="panel-heading">User</div>
    <div class="panel-body">
        <table class="table table-responsive">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Last_name</th>
                    <td>{{ user.lastname }}</td>
                </tr>
                <tr>
                    <th>Cc</th>
                    <td>{{ user.cc }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ user.phone }}</td>
                </tr>
                <tr>
                    <th>Salary</th>
                    <td>$ {{ user.salary }}</td>
                </tr>
                <tr>
                    <th><hr></th>
                    <td><hr></td>
                </tr>
                <tr>
                    <th>Eps</th>
                    <td>$ {{ roster.eps }}</td>
                </tr>
                <tr>
                    <th>Pension</th>
                    <td>$ {{ roster.pension }}</td>
                </tr>
                <tr>
                    <th>SalaryFinal</th>
                    <td>$ {{ roster.salaryFinal }}</td>
                </tr>
            </tbody>
        </table>
        <div class="col-md-10">
            <a  class="btn btn-default"  href="{{ path('user_index') }}">
                <i class="fa fa-angle-left"></i> Back to the list users
            </a>
        </div>
        <div class="col-md-1">
            <a  class="btn btn-warning"  href="{{ path('user_edit', { 'id': user.id }) }}">
                <i class="fa fa-edit"></i> Edit
            </a>
        </div>
        <div class="col-md-1">
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </div>
    </div>
</div>
{% endblock %}
