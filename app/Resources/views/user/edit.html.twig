{% extends 'base.html.twig' %}

{% block body %}
<div class="panel panel-primary">
    <div class="panel-heading">Edit User</div>
        <div class="panel-body">
            {{ form_start(edit_form) }}
                    {{ form_errors(edit_form.cc) }}
                    {{ form_label(edit_form.name) }}
                        {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_label(edit_form.last_name) }}
                        {{ form_widget(edit_form.last_name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_label(edit_form.cc) }}
                        {{ form_widget(edit_form.cc, {'attr': {'class': 'form-control'}}) }}
                    {{ form_label(edit_form.phone) }}
                        {{ form_widget(edit_form.phone, {'attr': {'class': 'form-control'}}) }}
                    {{ form_label(edit_form.salary) }}
                        {{ form_widget(edit_form.salary, {'attr': {'class': 'form-control'}}) }}
                <br><input type="submit" value="Edit" class="btn btn-primary"/><hr>
            {{ form_end(edit_form) }}

            <div class="col-md-10">
                <a  class="btn btn-default" href="{{ path('user_index') }}">
                    <i class="fa fa-angle-left"></i> Back to the list users
                </a>
            </div>
            <div class="col-md-2">
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
                {{ form_end(delete_form) }}
            </div>
        </div>
</div>
{% endblock %}
