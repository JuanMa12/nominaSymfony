{% extends 'base.html.twig' %}

{% block body %}
<div class="panel panel-primary">
    <div class="panel-heading">Book</div>
    <div class="panel-body">
        <table class="table table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ book.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ book.date }}</td>
            </tr>
            <tr>
                <th>Editorial</th>
                <td>{{ book.editorial }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ book.description }}</td>
            </tr>
        </tbody>
    </table>
        <div class="col-md-10">
            <a  class="btn btn-default"  href="{{ path('book_index') }}">
                <i class="fa fa-angle-left"></i> Back to the list books
            </a>
        </div>
        <div class="col-md-1">
            <a  class="btn btn-warning"  href="{{ path('book_edit', { 'id': book.id }) }}">
                <i class="fa fa-edit"></i> Edit
            </a>
        </div>
        <div class="col-md-1">
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </div>
    </div>
</div>
{% endblock %}
