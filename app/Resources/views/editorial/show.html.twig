{% extends 'base.html.twig' %}

{% block body %}
<div class="panel panel-primary">
    <div class="panel-heading">Editorial</div>
    <div class="panel-body">
        <table class="table table-responsive">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ editorial.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ editorial.name }}</td>
            </tr>
        </tbody>
    </table>
        <div class="col-md-10">
            <a  class="btn btn-default"  href="{{ path('editorial_index') }}">
                <i class="fa fa-angle-left"></i> Back to the list editorials
            </a>
        </div>
        <div class="col-md-1">
            <a  class="btn btn-warning"  href="{{ path('editorial_edit', { 'id': editorial.id }) }}">
                <i class="fa fa-edit"></i> Edit
            </a>
        </div>
        <div class="col-md-1">
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </div>
    </div>
</div>
{% endblock %}
